@model CreateOrderAddressDto

<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
    <div class="bg-light p-30 mb-5">
        <form method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Adınız</label>
                    <input class="form-control" type="text" placeholder="Adınız" asp-for="Name" id="firstName" required>
                </div>
                <div class="col-md-6 form-group">
                    <label>Soyadınız</label>
                    <input class="form-control" type="text" placeholder="Soyadınız" asp-for="Surname" id="lastName" required>
                </div>
                <div class="col-md-6 form-group">
                    <label>E-mail</label>
                    <input class="form-control" type="text" placeholder="example@email.com" asp-for="Email" id="email">
                </div>
                <div class="col-md-6 form-group">
                    <label>Telefon Numaranız</label>
                    <input class="form-control" type="text" placeholder="+90 123 456 45 78" asp-for="Phone" id="mobileNo">
                </div>
                <div class="col-md-6 form-group">
                    <label>Mahalle</label>
                    <input class="form-control" type="text" placeholder="123 Mahallesi" asp-for="Detail1" id="addressLine1">
                </div>
                <div class="col-md-6 form-group">
                    <label>Sokak</label>
                    <input class="form-control" type="text" placeholder="123 Sokak" asp-for="Detail2" id="addressLine2">
                </div>
                <div class="col-md-6 form-group">
                    <label>Ülke</label>
                    <select class="custom-select" asp-for="Country" id="country">
                        <option selected>Türkiye</option>
                    </select>
                </div>
                <div class="col-md-6 form-group">
                    <label>Şehir</label>
                    <input class="form-control" type="text" placeholder="İstanbul" asp-for="City" id="city">
                </div>
                <div class="col-md-6 form-group">
                    <label>İlçe</label>
                    <input class="form-control" type="text" placeholder="Kadıköy" asp-for="District" id="district">
                </div>
                <div class="col-md-6 form-group">
                    <label>Posta Kodu</label>
                    <input class="form-control" type="text" placeholder="123" id="zipCode" asp-for="ZipCode">
                </div>
                <div class="col-md-12 form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" type="text" placeholder="Sipariş ile ilgili varsa notunuzu girebilirsiniz..." id="description" rows="5" asp-for="Description"></textarea>
                </div>
            </div>
        </form>
        
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(document).ready(function () {
        $('#submitBtn').click(function (e) {
            e.preventDefault();

            var formData = {
                Name: $('#firstName').val(),
                Surname: $('#lastName').val(),
                Email: $('#email').val(),
                Phone: $('#mobileNo').val(),
                Detail1: $('#addressLine1').val(),
                Detail2: $('#addressLine2').val(),
                Country: $('#country').val(),
                City: $('#city').val(),
                District: $('#district').val(),
                ZipCode: $('#zipCode').val(),
                Description: $('#description').val(),
            };

            $.ajax({
                type: 'POST',
                url: '/Order/CreateOrderAddress',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                success: function (response) {
                    alert(response);
                },
                error: function (xhr, status, error) {
                    alert(xhr.responseText);
                }
            });
        });
    });
</script>