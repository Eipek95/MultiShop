
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count=0;
}

@model List<ResultSendboxMessageDto>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Gönderen</th>
                                <th>Konu</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Mesajı Aç</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.RecieverId</td>
                                    <td>@item.Subject</td>
                                    <td>@item.MessageDate.ToString("dd-MMMM-yyyy-dddd")</td>
                                    <td>@item.IsRead</td>
                                    <td><a href="#" class="btn btn-warning btn-sm">Sipariş Detayları</a></td>
                                    <td><a href="#" class="btn btn-warning btn-sm">Sipariş Detayları</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

