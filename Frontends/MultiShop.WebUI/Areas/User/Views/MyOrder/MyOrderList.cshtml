@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
               
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Toplam Fiyat</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Detayları</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderingId</td>
                                    <td>@item.TotalPrice ₺</td>
                                    <td>@item.OrderDate.ToString("dd-MMM-yyyy")</td>
                                    <td><a href="#" class="btn btn-warning btn-sm">Sipariş Detayları</a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  
</div>

