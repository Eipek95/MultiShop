
@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model UpdateCargoCompanyDto
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Firması Düzenleme Sayfası</h4>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="cargoCompanyId">Firma ID</label>
                        <input type="text" class="form-control" asp-for="cargoCompanyId" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="cargoCompanyName">Firma Adı</label>
                        <input type="text" class="form-control" asp-for="cargoCompanyName" placeholder="Firma Adı" required>
                    </div>
                    <button type="submit" class="btn btn-default">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</section>


