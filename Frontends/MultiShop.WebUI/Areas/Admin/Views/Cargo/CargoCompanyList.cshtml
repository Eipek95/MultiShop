@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Firmaları İşlemleri</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Firma Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.cargoCompanyName</td>
                                    <td>
                                        <a asp-action="DeleteCargoCompany" asp-controller="Cargo" asp-area="Admin" asp-route-id="@item.cargoCompanyId" class="btn btn-danger">Sil</a>
                                    </td>
                                    
                                    <td>
                                        <a asp-action="UpdateCargoCompany" asp-controller="Cargo" asp-area="Admin" asp-route-id="@item.cargoCompanyId" class="btn btn-success">Güncelle</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="CreateCargoCompany" asp-controller="Cargo" asp-area="Admin" class="btn btn-success">Yeni Kargo Firma Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>
