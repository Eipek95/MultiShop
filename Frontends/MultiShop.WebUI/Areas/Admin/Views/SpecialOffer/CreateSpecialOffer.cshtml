@model CreateSpecialOfferDto
@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Ekleme Sayfası</h4>
                <form method="post" asp-action="CreateSpecialOffer" asp-area="Admin">
                    <div class="form-group">
                        <label asp-for="Title">Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Teklif Başlığı" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubTitle">Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" placeholder="Teklif Alt Başlığı" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl">Teklif Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Teklif Görseli" required>
                    </div>
                    <button type="submit" class="btn btn-default">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</section>

