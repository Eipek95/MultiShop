@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekleme Sayfası</h4>
                <form method="post" asp-action="CreateCategory" asp-area="Admin">
                    <div class="form-group">
                        <label asp-for="CategoryName">Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl">Kategori Görseli</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Kategori Görseli" required>
                    </div>
                    <button type="submit" class="btn btn-default">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</section>

